{% extends 'base.html.twig' %}

{% block title %}Hello TaskManagerController!{% endblock %}

{% block body %}
<div class="header">
    <h2>Enter Task</h2>
    <h3>*Note: Added tasks will automatically be labeled "incomplete"</h3>
    <form>
        <input name="title" type="text" id="myInput" placeholder="i.e. Error Test"/>
        <button type="submit" class="addBtn">Add a task</button>
    </form>
    {# Tasks will go here #}
    <ul>
        <li>Sample Task</li>
    </ul>
</div>
{% endblock %}
